  <form id="search" method="post">
    
    <input type="text" id="nameInput" name="name" placeholder="Character Name">
    <input id="get" type="submit" value="Search" formaction="/get-name">
    
  </form>

  <div class="page_selector">
    <div class="left_page">
      <form  method="get">
        <input id="backpage" type="submit" value=""  formaction="/back">

      </form>

    </div>
    <div class="page_count">
      <p style="font-family: descricao;"><%= newdados.pagecount %>/42</p>
      
    </div>
    <div class="right_page">
      <form  method="get">
        <input id="nextpage" type="submit" value="" formaction="/next">

      </form>
    </div>

  </div>
  
