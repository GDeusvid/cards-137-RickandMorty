<% if (locals.newdados) { %>
  <script>
  var textoCompleto = $(".page_count p").text();
  var partes = textoCompleto.split("/");
 var numeropage = parseInt(partes[0], 10);
 console.log(numeropage); // Saída: 10
 if(numeropage <=1){
  
  $("#backpage").attr("disabled", true);
 } else{
  $("#backpage").attr("disabled", false);
 }
 if(numeropage >=42){
  
  $("#nextpage").attr("disabled", true);
 } else{
  $("#nextpage").attr("disabled", false);
 }
  
  
</script>
